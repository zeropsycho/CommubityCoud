<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zero.hjy.dao.EnterpriseMappe">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, enterprise_no, superior, enterprise_fullname, enterprise_abbreviation, enterprise_type, enterprise_telephone,
        enterprise_address, enterprise_node, central_tax, bank_of_deposit, enterprise_brand, postalcode, fax_number, email_address, local_tax, banking_account
    </sql>
    
    <resultMap id="CompanyMap" type="com.zero.hjy.entity.Enterprise">
        <id property="id" column="id"/>
        <result property="enterpriseFullname" column="enterprise_fullname"/>
        <result property="enterpriseNo" column="enterprise_no"/>
        <result property="enterpriseAbbreviation" column="enterprise_abbreviation"/>
        <result property="enterpriseType" column="enterprise_type"/>
        <result property="enterpriseTelephone" column="enterprise_telephone"/>
        <result property="enterpriseAddress" column="enterprise_address"/>
        <result property="enterpriseNode" column="enterprise_node"/>
        <result property="centralTax" column="central_tax"/>
        <result property="bankOfDeposit" column="bank_of_deposit"/>
        <result property="enterpriseBrand" column="enterprise_brand"/>
        <result property="postalcode" column="postalcode"/>
        <result property="faxNumber" column="fax_number"/>
        <result property="emailAddress" column="email_address"/>
        <result property="localTax" column="local_tax"/>
        <result property="bankingAccount" column="banking_account"/>
    </resultMap>

    <!--查询企业/公司全称-->
    <select id="companyNameList" resultMap="CompanyMap">
        SELECT enterprise_fullname, id, enterprise_no FROM `tab_enterprise`
        <where>
        <if test="type != 0">
            enterprise_type = #{type}
        </if>
        </where>
    </select>
</mapper>
